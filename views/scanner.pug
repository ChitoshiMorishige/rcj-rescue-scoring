//- -*- tab-width: 2 -*-
extends includes/layout

block vars
    - var ngAppDef = 'Scanner'

append scripts
    script.
      var mode = "#{mode}"
    script(src='/javascripts/scanner.js')

block location
    a.breadcrumb-item(ng-click="go('/home')") Home
    span.breadcrumb-item.active Scanner

block content
    if mode == "home"
        .row
            .col-md-1
            .col-md-10(style="text-align:center;")
                h2 {{'scanner.selectMode' | translate}}
                .row.row-height(style="display: flex;justify-content: space-between;")
                    .col-md-6(style="margin-bottom:20px;")
                        .card(ng-click="go('/home/scanner/input')" style="width:100%;height:100%;text-align:center;")
                            img.card-img-top(ng-src="/images/inputter.png", alt='' style="max-height:300px;width:100%;object-fit: contain;")
                            .card-body
                                h3(style="text-align:center" ng-cloak) {{'scanner.input' | translate}}
                    .col-md-6(style="margin-bottom:20px;")
                        .card(ng-click="go('/home/scanner/check')" style="width:100%;height:100%;text-align:center;")
                            img.card-img-top(ng-src="/images/checker.png", alt='' style="max-height:300px;width:100%;object-fit: contain;")
                            .card-body
                                h3(style="text-align:center" ng-cloak) {{'scanner.check' | translate}}
    else
        .row
            .col-md-1
            .col-md-10(style="text-align:center;")
                h2 {{'scanner.description' | translate}}
                input.form-control#first(type='text', placeholder='', ng-model='data',ng-keydown="handleKeydown($event)")
                img(src="/images/barcode.png" style="")
                h2 [{{'scanner.mode' | translate}}] #{mode}
