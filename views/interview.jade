//- -*- tab-width: 2 -*-
extends includes/layout

block vars
  - var ngAppDef = 'CompetitionTeams'

append scripts
  script.
    var competitionId = "#{id}"
    var league = "#{league}"
  script(src='/javascripts/interview.js')

block location
    a.breadcrumb-item(onclick="location.href='/home'") Home
    span.breadcrumb-item.active Interview


block content
  .row
    .col-md-1
    .col-md-10
      h1 {{competition.name}} - {{"common.interview" | translate}}
      br
      table.custom
        thead
            tr
              th {{"common.team" | translate}}
              th {{"common.league" | translate}}
              th {{"common.inspected" | translate}}
              th {{"common.interview" | translate}}
              th {{"common.operation" | translate}}
        tbody
            tr(ng-repeat='team in teams')
              td(ng-bind='team.name')
              td(ng-bind='team.league')
              td(ng-click='inspected(team)')
                i(class="fa fa-2x fa-check" aria-hidden="true" style="color:#2ecc71;" ng-if="team.inspected")
                i(class="fa fa-2x fa-times" aria-hidden="true" style="color:#e74c3c;" ng-if="!team.inspected")
              td
                i(class="fa fa-2x fa-check" aria-hidden="true" style="color:#2ecc71;" ng-if="team.interviewer!=''&& team.interviewer != sign_empty")
                i(class="fa fa-2x fa-times" aria-hidden="true" style="color:#e74c3c;" ng-if="team.interviewer=='' || team.interviewer == sign_empty")
              td
                button(ng-click="go('/interview/'+ competitionId +'/view/' + team._id)" class='btn btn-info' style="width:45%; margin-right:5px;") {{'common.view' | translate}}
                button(ng-click="go('/interview/'+ competitionId +'/do/' + team._id)" class='btn btn-dark' style="width:45%; margin-right:5px;") {{'common.interview' | translate}}
      